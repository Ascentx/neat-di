{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitUseStrict": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es6",
        "es2016",
        "dom"
      ],
      "typeRoots": [
        "./node_modules/@types"
      ],
      "baseUrl": "./",
    },
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ]
  }